@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.Carros == null || ViewBag.Carros.Count == 0) 
{
    <div class="container text-center">
        <h2>Nenhum carro cadastrado no momento.</h2>
    </div>
}
else
{
    <div class="container text-center">
        <div class="row">
            <h1>Galeria de Carros</h1>
            @await Html.PartialAsync("_Card")
        </div>
    </div>
}
