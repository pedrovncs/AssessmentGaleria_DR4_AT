@{
}

<div class="container mt-5">
    <div class="row">
        @foreach (Carro item in ViewBag.Carros)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@item.Imagem" class="card-img-top" alt="@item.Modelo">
                    <div class="card-body">
                        <h5 class="card-title">@item.Modelo</h5>
                        <p class="card-text">@item.Descricao</p>
                        <a asp-controller="Carro" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Ver detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
